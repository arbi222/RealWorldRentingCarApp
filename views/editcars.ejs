<%- include("partials/header") -%>

<title><%= title %></title>

<%- include("partials/navbar") -%>

<div class="add-cars-container edit-car-container">

    <h1 class="header">Edit Car</h1>

    <form method="post">
        <label for="carname">Name</label>
        <input type="text" id="carname" class="input-field input-field-margin form-control" placeholder="Name of the car" name="carname" value="<%= car.name %>" required>

        <label for="price">Price</label>
        <div class="pricing">

            <input type="number" id="price" class="input-field input-field-margin form-control" placeholder="Renting price" name="price" value="<%= car.price %>" required>
            
            <div class="radio_button">
                <div class="choices">
                    <label for="day">Day</label>
                    <% if (car.pricetype === "Day"){ %>
                        <input name="pricetype" id="day" value="Day" type="radio" checked required>
                    <% }
                    else{ %>
                        <input name="pricetype" id="day" value="Day" type="radio" required>
                    <% } %>
                </div>
                <div class="choices">
                    <label for="hour">Hour</label>
                    <% if (car.pricetype === "Hour"){ %>
                            <input name="pricetype" id="hour" value="Hour" type="radio" checked required>
                    <% }
                        else{ %>
                            <input name="pricetype" id="hour" value="Hour" type="radio" required>
                    <% } %>
                </div>
            </div>

        </div>

        <label for="photo">Picture</label>
        <img class="edit-car-img" src="uploads/<%= car.picture %>" alt="car image">

        <label for="year">Year</label>
        <input type="number" id="year" class="input-field input-field-margin form-control" placeholder="YYYY" name="year" value="<%= car.year %>">
        
        <div class="options">
            <label>Fuel</label>
            <div class="radio_button">
                <div class="choices">
                    <label for="petrol">Petrol</label>
                    <% if (car.fuel === "petrol"){ %>
                        <input name="fuel" id="petrol" value="petrol" type="radio" checked required>
                    <% }
                    else{ %>
                        <input name="fuel" id="petrol" value="petrol" type="radio" required>
                    <% } %>
                </div>
                <div class="choices">
                    <label for="diesel">Diesel</label>
                    <% if (car.fuel === "diesel"){ %>
                            <input name="fuel" id="diesel" value="diesel" type="radio" checked required>
                    <% }
                        else{ %>
                            <input name="fuel" id="diesel" value="diesel" type="radio" required>
                    <% } %>
                </div>
                <div class="choices">
                    <label for="gas-petrol">Gas-Petrol</label>
                    <% if (car.fuel === "gas-Petrol"){ %>
                        <input name="fuel" id="gas-petrol" value="gas-Petrol" type="radio" checked required>
                    <% }
                    else{ %>
                        <input name="fuel" id="gas-petrol" value="gas-Petrol" type="radio" required>
                    <% } %>
                </div>
                <div class="choices">
                    <label for="electric">Electric</label>
                    <% if (car.fuel === "electric"){ %>
                            <input name="fuel" id="electric" value="electric" type="radio" checked required>
                    <% }
                        else{ %>
                            <input name="fuel" id="electric" value="electric" type="radio" required>
                    <% } %>
                </div>
            </div>
        </div>

        <hr>

        <div class="options">
            <label>Gear</label>
            <div class="radio_button">
                <div class="choices">
                    <label for="automatic">Automatic</label>
                    <% if (car.gear === "automatic"){ %>
                        <input name="gear" id="automatic" value="automatic" type="radio" checked required>
                    <% }
                    else{ %>
                        <input name="gear" id="automatic" value="automatic" type="radio" required>
                    <% } %>
                </div>
                <div class="choices">
                    <label for="manual">Manual</label>
                    <% if (car.gear === "manual"){ %>
                            <input name="gear" id="manual" value="manual" type="radio" checked required>
                    <% }
                        else{ %>
                            <input name="gear" id="manual" value="manual" type="radio" required>
                    <% } %>
                </div>
            </div>
        </div>

        <label for="passengers">Passengers</label>
        <input type="number" id="passengers" class="input-field input-field-margin form-control" placeholder="e.g. 5 " name="passengers" value="<%= car.passengers %>">

        <label for="doors">Doors</label>
        <input type="number" id="doors" class="input-field input-field-margin form-control" placeholder="e.g. 4 " name="doors" value="<%= car.doors %>">

        <label for="engine">Engine capacity (cc)</label>
        <input type="Number" id="engine" class="input-field input-field-margin form-control" placeholder="e.g. 1800" name="engine" value="<%= car.engine %>">
        
        <button class="btn btn-success change-pass-btn" type="submit">Save Changes</button>
        
    </form>
    
</div>